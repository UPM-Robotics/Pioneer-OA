	author = {Elfes, A.},
	month = jun,
	year = {1987},
	keywords = {Application software, Data mining, Mobile robots, Path planning, Robot sensing systems, Robotics and automation, Robots, locomotion, Robustness, Service robots, Sonar measurements, Sonar navigation, Terrain mapping},
	pages = {249--265},
	file = {IEEE Xplore Abstract Record:/home/javinator9889/Zotero/storage/2M7AHLJH/1087096.html:text/html}
}

